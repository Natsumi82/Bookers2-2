<h2>New Book</h2>

<%= form_with model: @book do |f| %>
<div class= "form-group">
 <%= f.label :title, 'Title' %>
 <%= f.text_field :title, class: 'form-control' %>
</div>

 <div class="form-group">
  <%= f.label :body, 'Opinion' %>
  <%= f.text_area :body, class: 'form-control' %>
 </div>

<div><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
<% end %>



