<h2>New Book</h2>
<%= form_with model: Book.new do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opnion</h4>
 <%= f.text_area :body %>

<%= link_to 'Create Book', new_book_path, class: "btn btn-success" %>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">

 <% @books.each do |book| %>
 <tbody>
  <tr>
   <th><%= user.name %></th>
  </tr>
  <tr>

   <th></th>

  </tr>
  <% end %>
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

 </tbody>
</table>

 <% if @book.user == current_user %>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>
</div>